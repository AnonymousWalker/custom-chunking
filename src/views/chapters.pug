extends index.pug

block action
    +action Select Chapter

block breadcrumbs
    -
        var crumbs = [
            {name: "HOME", href: "/"},
            {name: params.lang.toUpperCase(), href: `/${params.lang}`},
            {name: params.book.toUpperCase(), href: `/${params.lang}/${params.book}`}
        ]
    +breadcrumbs(crumbs, params.res.toUpperCase())
block content
    ul(class='menu')
        each chapter in chapters
            li
                a(href=`/${params.lang}/${params.book}/${params.res}/${chapter.slug}`)= chapter.slug
        else
            li(class='not_found') There are no chapters
