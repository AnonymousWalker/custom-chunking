extends index.pug

block append scripts
    script(type='module', src='/js/chunking_component.js')

block action
    +action Create Chunks

block breadcrumbs
    -
        var crumbs = [
            {name: "Home", href: "/"},
            {name: params.lang, href: `/${params.lang}`},
            {name: params.res, href: `/${params.lang}/${params.res}`},
            {name: params.book, href: `/${params.lang}/${params.res}/${params.book}`}
        ]
    +breadcrumbs(crumbs, params.chapter)
block content
    div(id='chunkingComponent' data-usx=contents)
